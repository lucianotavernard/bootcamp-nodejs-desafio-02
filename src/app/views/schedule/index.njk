{% extends "_layouts/default.njk" %}

{% block body %}
  <div class="content">
    <strong>Meus agendamentos</strong>

    {% if appointments.length === 0 %}
      <h4 class="message">Desculpe, você não possui agendamentos para hoje :(</h4>
    {% endif %}

    <ul class="providers">
      {% for appointment in appointments %}
        <li class="provider">
          <div>
            <img src="/files/{{ appointment.user.avatar }}"/>
            <strong>{{ appointment.user.name }}
              <br>
              {{ appointment.date | date("HH:mm") }}</strong>
          </div>
        </li>
      {% endfor %}
    </ul>

    <a href="/app/dashboard" class="logout">Voltar</a>
  </div>
{% endblock %}
